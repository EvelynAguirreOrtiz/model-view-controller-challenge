{{! shows up on homepage and  }}
<article class="post">
	<div class="title">
		<a href="/post/{{id}}" target="_blank">{{title}}</a>
		{{!-- <p>({{post_text}})</p> --}}

		<p>{{post_text}}</p>

	</div>
	<div class="meta">
		by
		{{user.username}}
		on
		{{format_date created_at}}
		|
		<a href="/post/{{id}}">{{comments.length}} comment(s)</a>
	</div>
</article>