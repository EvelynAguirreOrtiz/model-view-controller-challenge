<html lang="en">

	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>My Tech Blog</title>
		<link rel="stylesheet" href="/stylesheets/style.css" />
	</head>

	<body>
		<div class="wrapper">
			<header>
				<h1><a href="/">My Tech Blog</a><span>
						<h2 class="subtitle">A community resource for sharing and support</h2></span></h1>
				<nav>
					{{#if loggedIn}}
						<a href="/dashboard">Create/Edit Posts</a>
						<button id="logout" class="btn-no-style">Logout</button>
					{{else}}
						<a href="/login" id="login">Login/Sign Up<h6>(you must be logged in
								to leave a comment)</h6></a>
					{{/if}}
				</nav>

			</header>
			<main>

				{{{body}}}
			</main>
			<footer>
				Thanks for visiting!
			</footer>
		</div>

		{{#if loggedIn}}
			<script src="/javascript/logout.js"></script>
		{{/if}}
	</body>

</html>